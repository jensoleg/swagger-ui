<div class='auth_button' id='basic_auth_button'>
    <label>Authenticate</label>
</div>
<div class='auth_container' id='basic_auth_container'>
  <div class='key_input_container'>

    <div class="auth_field">
        <input placeholder="username" class="auth_input ui-form-control" id="input_username" name="username" type="text"/>
    </div>

    <div class="auth_field">
        <input placeholder="password" class="auth_input ui-form-control" id="input_password" name="password" type="password"/>
    </div>

    <div class='auth_submit'>
        <a class='auth_submit_button btn btn-primary' id="apply_basic_auth" href="#">Log In</a>
    </div>
  </div>
</div>

